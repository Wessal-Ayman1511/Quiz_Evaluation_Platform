from app import create_app, db
from app.models.users import User
from werkzeug.security import generate_password_hash

# Initialize the Flask application and the database
app = create_app()

# Create a context for interacting with the database
with app.app_context():
    # Create a fake teacher user
    student = User(
        name='yazed',
        email='yazed@example.com',
        role='student',
        password=generate_password_hash('zozo')
    )
    # student = User(
    #     name='wassola',
    #     email='wassola@example.com',
    #     role='student',
    #     password=generate_password_hash('wassola12')
    # )
    
    # teacher = User(
    #     name='ali',
    #     email='ali@example.com',
    #     role='teacher',
    #     password=generate_password_hash('ali12')
    # )
    
   

    # Add and commit the new user to the database
    #db.session.add(teacher)
    db.session.add(student)
    db.session.commit()

    print('Fake Student and Teacher user has been added to the database.')
